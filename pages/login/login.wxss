/* pages/login/login.wxss */
Page {
  width: 100%;
  height: 100%;
}

.page-frame {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  padding: 50px 10px;
  justify-content: flex-start;
  align-items: center
}

.login-with-test {
  width: 100%;
  padding: 0 10%;
  box-sizing: border-box;
  font-size: 11px;
  color: #999;
  text-align: right;
  margin-bottom: 20px;
}

#login-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 20px;
}

#login-name {
  margin-bottom: 20px;
}
#login-message {
  width: 100%;
  padding: 0 10%;
  box-sizing: border-box;
  font-size: 14px;
  text-align: center;
  color: #666
}

.register-password {
  border: 1px solid #e5e5e5;
  background: #f5f5f5;
  padding-left: 12px;
  margin: 14px 0;
  height: 40px;
}

.register-password-placeholder {
  font-size: 16px;
  color: #888;
}

.submit-button {
  background: #03a9f4;
  color: #fff;
  font-size: 18px;
}





//for test
.login-test view{
  display: flex;
  flex-flow: row nowrap;
  font-size:14px;
  color:#666;
  height: 30px;
  line-height: 30px;
  margin-bottom: 10px;
}

.login-test label {
  width: 80px;
}

.login-test input {
  border: 1px solid #999
}


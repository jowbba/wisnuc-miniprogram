/* pages/login/login.wxss */
Page {
  width: 100%;
  height: 100%;
}

.page-frame {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  padding: 50px 0px 0px;
  font-size:16px;
  color:#353535;
}

.login-with-test {
  width: 100%;
  padding: 0 10%;
  box-sizing: border-box;
  font-size: 11px;
  color: #999;
  text-align: right;
  margin-bottom: 20px;
  display: none;
}

#login-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 20px;
  margin:0 auto;
}

#login-name {
  margin-top: 20px;
  margin-bottom: 20px;
  text-align: center;
}
#login-message {
  width: 100%;
  padding: 0 10%;
  box-sizing: border-box;
  font-size: 16px;
  text-align: center;
  color: #666
}

.confirm-dialog {
  display: flex;
  flex-flow: column nowrap;
}

.confirm-title {
  text-align: center;
  margin-bottom: 30px;
}

.register-password {
  border: 1px solid #e5e5e5;
  /* background: #f5f5f5; */
  background: #fff;
  height: 40px;
  margin: 0 32px 20px 32px;
  padding-left:16px;
}

.register-password-placeholder {
  font-size: 14px;
  color: #888;
}

.bottom-area {
  position: absolute;
  width: calc(100% - 20px);
  bottom: 10px;
  padding: 0 10px;
}

.submit-button {
  background: #03a9f4;
  color: #fff;
  font-size: 18px;
}

